@model IEnumerable<thatsmyareacode.Models.Zinger>

@{
    ViewBag.Title = "That's My Area Code!";
}

<div class="jumbotron">
    <h1>That's My Area Code!</h1>
</div>

<div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel">

    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="/Content/App_LocalResources/carouselOne.jpg" alt="0">
        </div>
        <div class="item">
            <img src="/Content/App_LocalResources/courtwithwords.jpg" alt="1">
            <div class="carousel-caption">
                <h3></h3>
            </div>
        </div>

        <div class="item">
            <img src="/Content/App_LocalResources/carouselThree.jpg" alt="2">
            <div class="carousel-caption">
                <h3></h3>
                <p></p>
            </div>
        </div>
    </div>
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>



    <div class="row">
        <div class="col-md-2">
            <div class="sidebar-module sidebar-module-inset">
                <div class="well">
                    <p>Genres will go here</p>
                    <button class="btn btn-success">News</button><br/>
                    <button class="btn btn-warning">Sports</button><br/>
                    <button class="btn btn-primary">Humor</button><br/>
                    <button class="btn btn-default">Random</button><br/>
                    <button class="btn btn-info">Romance</button><br/>
                    <button class="btn btn-danger">Popular</button><br/>

                </div>
            </div>
        </div>
        <div class="col-md-10">
            <div class="well">
                <p>
                    <button type="button" class="btn btn-success"> @Html.ActionLink("Create New", "Create")</button>

                    @using (Html.BeginForm())
                    {
                    <p>
                        Genre: @Html.DropDownList("zingerGenre", "All")

                        User Name: @Html.TextBox("SearchString")
                        <input type="submit" value="Filter" />

                        Area Code: @Html.TextBox("zingerAreaCode")
                        <input type="submit" value="Change Area Code" class="btn btn-success" />
                    </p>
                    }
