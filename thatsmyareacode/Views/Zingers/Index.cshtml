    $(document).ready(function ()
    {
        $("#myCarousel").carousel();
    });

    $('#areaCodeModal').on('shown.bs.modal', function () {
        $('#myInput').focus()
    })


    $("#allCodes").click(function ()
    {
        $("#areaCode").val("");
    });

  
